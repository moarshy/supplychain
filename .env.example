# AI4SupplyChain Environment Configuration
# Copy this file to .env and modify values as needed

# Database Configuration
DATABASE_URL=sqlite:///./data/inventory.db
DATABASE_ECHO=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security Configuration (CHANGE IN PRODUCTION)
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Business Rules Configuration
ALLOW_NEGATIVE_INVENTORY=false
AUTO_CREATE_INVENTORY_RECORDS=true
DEFAULT_REORDER_POINT=10
DEFAULT_REORDER_QUANTITY=50

# Pagination Configuration
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO